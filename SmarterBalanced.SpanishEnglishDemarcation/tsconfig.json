{
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noEmitOnError": false,
    "removeComments": false,
    "declaration": true,
    "baseUrl": ".",
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "outDir": "./lib",
    "jsx": "react",
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "types": ["webpack-env"],
    "typeRoots": ["./node_modules/@types", "./typings"],
    "lib": ["es5", "es6", "dom"],
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ]
  },
  "exclude": [
      "bin",
      "node_modules"
  ]
}
